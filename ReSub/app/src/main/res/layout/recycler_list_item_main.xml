<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/slide_item_card">
    <LinearLayout
        android:id="@+id/slide_item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/basic_margin_title">
        <ImageView
            android:id="@+id/slide_item_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="앱 이미지"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/slide_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="앱 이름"
            android:textSize="20sp"
            style="@style/TextAppearance.AppCompat.Bold"
            android:textColor="@android:color/black"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/slide_item_no_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/basic_margin_title"
        android:background="@drawable/shape_slide_card"
        android:visibility="gone">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@mipmap/ic_sub_add"
            android:layout_gravity="center"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>