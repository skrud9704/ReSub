<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/basic_margin_element_half"
    app:cardCornerRadius="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/item_plan_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detail_plan_name"
            style="@style/TextAppearance.AppCompat.Bold"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGreyDark5"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/item_plan_benefit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detail_plan_benefit_foo"
            style="@style/TextAppearance.AppCompat.Normal"
            android:textSize="12sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">
            <TextView
                android:id="@+id/item_plan_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_plan_charge_foo"
                style="@style/TextAppearance.AppCompat.Bold"
                android:gravity="end"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_plan_slash"
                style="@style/TextAppearance.AppCompat.Normal"
                android:gravity="end"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/item_plan_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_plan_unit_foo"
                style="@style/TextAppearance.AppCompat.Normal"
                android:gravity="end"
                android:textSize="12sp"/>

        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>