<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/item_plan_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="플랜 이름"
        style="@style/TextAppearance.AppCompat.Bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:id="@+id/item_plan_benefit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="혜택 주저리 주저리" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end">
        <TextView
            android:id="@+id/item_plan_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18,000"
            style="@style/TextAppearance.AppCompat.Bold"
            android:gravity="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            style="@style/TextAppearance.AppCompat.Normal"
            android:gravity="end"/>

        <TextView
            android:id="@+id/item_plan_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 month"
            style="@style/TextAppearance.AppCompat.Normal"
            android:gravity="end"/>

    </LinearLayout>



</LinearLayout>