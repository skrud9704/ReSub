<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.detail.DetailActivity"
    android:orientation="vertical">

    <!-- HEAD 시작 -->
    <LinearLayout
        android:id="@+id/detail_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/basic_margin_title">
        <!-- LOGO 시작 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            style="@style/TextAppearance.AppCompat.Bold"
            android:textSize="27sp"/>
        <!-- LOGO 끝 -->
        <!-- SIDE MENU 시작-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_menu"
                android:layout_width="@dimen/icon_size_menu"
                android:layout_height="@dimen/icon_size_menu"
                android:src="@mipmap/ic_menu"
                android:layout_gravity="end"/>
        </LinearLayout>
        <!-- SIDE MENU 끝-->
    </LinearLayout>
    <!-- HEAD 끝 -->

    <!-- BODY 시작 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/detail_head">
        <ImageView
            android:id="@+id/detail_app_icon"
            android:layout_width="@dimen/icon_size_app"
            android:layout_height="@dimen/icon_size_app"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/detail_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_name_foo"
            android:layout_gravity="center"
            style="@style/TextAppearance.AppCompat.Bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/detail_app_free_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_free_foo"
                android:fontFamily="@font/font"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/detail_app_discount_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_discount_foo"
                android:fontFamily="@font/font"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/detail_app_multi_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_multi_foo"
                android:fontFamily="@font/font"
                android:textSize="10sp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detail_plan_list"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="@dimen/basic_margin_element"
            android:layout_marginStart="@dimen/basic_margin_element_half"
            android:layout_marginEnd="@dimen/basic_margin_element_half"/>

    </LinearLayout>
    <!-- BODY 끝 -->
    <!-- BODY 버튼 시작 -->
    <Button
        android:id="@+id/btn_goto_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detail_btn_add"
        android:backgroundTint="@color/colorBlack"
        android:textColor="@color/colorWhite"
        style="@style/TextAppearance.AppCompat.Normal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"/>
    <!-- BODY 버튼 끝 -->

</RelativeLayout>